{
  "name": "simplenote",
  "version": "1.0.0",
  "description": "A simple To-do list application.",
  "main": "electron.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node src/server.js",
    "electron-start": "electron electron.js"
  },
  "keywords": [],
  "author": "AJ Ristino",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.3",
    "express": "^4.21.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "7zip-bin": "^5.2.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.example.todoapp",
    "productName": "Simple Note",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron.js",
      "src/**/*",
      "data/todo.db",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "type": "development",
      "icon": "src/V2.icns",
      "artifactName": "${productName}-${version}-${arch}.dmg",
      "target": "dmg"
    },
    "win": {
      "icon": "src/assets/icon.ico"
    },
    "linux": {
      "icon": "src/assets/icon.png"
    }
  }
}
